{
  "name": "samsungtv-appium",
  "type": "module",
  "devDependencies": {
    "@headspinio/tizen-remote": "^0.6.1",
    "@wdio/appium-service": "latest",
    "@wdio/cli": "latest",
    "@wdio/cucumber-framework": "^9.18.0",
    "@wdio/local-runner": "^9.18.4",
    "@wdio/spec-reporter": "^9.20.0",
    "@wdio/visual-service": "^9.0.0",
    "appium": "^2.0.0",
    "appium-tizen-tv-driver": "^0.18.1",
    "cucumber-html-reporter": "^7.2.0",
    "playwright": "^1.55.1",
    "rimraf": "^6.0.1",
    "wdio-cucumberjs-json-reporter": "^6.0.1",
    "wdio-html-nice-reporter": "^8.1.7"
